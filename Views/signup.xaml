    <ScrollView>
        <StackLayout Padding="20">
        <Grid RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Text="Before proceeding, let's create your account" FontFamily="Roboto-Bold" FontSize="18" TextColor="Black" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0,0,0,20"/>

            <Entry x:Name="Email" FontFamily="Roboto" Placeholder="Email" BackgroundColor="#F8F8F8" HeightRequest="40" VerticalOptions="CenterAndExpand" Grid.Row="1"/>
            <Entry x:Name="Username" FontFamily="Roboto" Placeholder="Username" BackgroundColor="#F8F8F8" HeightRequest="40" VerticalOptions="CenterAndExpand" Grid.Row="2" Margin="0,10,0,0"/>
            <Entry x:Name="FullName" FontFamily="Roboto" Placeholder="Full Name (according to IC)" BackgroundColor="#F8F8F8" HeightRequest="40" VerticalOptions="CenterAndExpand" Grid.Row="3" Margin="0,10,0,0"/>
            <Entry x:Name="PhoneNumber" FontFamily="Roboto" Placeholder="Phone Number (optional)" BackgroundColor="#F8F8F8" HeightRequest="40" VerticalOptions="CenterAndExpand" Grid.Row="4" Margin="0,10,0,0"/>
            <Entry x:Name="Password" FontFamily="Roboto" Placeholder="Password" BackgroundColor="#F8F8F8" HeightRequest="40" VerticalOptions="CenterAndExpand" Grid.Row="5" Margin="0,10,0,0"/>
            <Entry x:Name="IdentificationNumber" FontFamily="Roboto" Placeholder="IC (with a -, example: xxxxxx-xx-xxxx)" BackgroundColor="#F8F8F8" HeightRequest="40" VerticalOptions="CenterAndExpand" Grid.Row="6" Margin="0,10,0,0"/>

            <Button Text="Create Account" Clicked="OnCreateAccountClicked" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" TextColor="White" FontAttributes="Bold" BackgroundColor="#FFD700" Grid.Row="7" Margin="0,20,0,0"/>

          
        </Grid>
    </StackLayout>
    </ScrollView>
</ContentPage>